		}

	} else if(Model.Tab == Constants.GroupMembersTab || Model.Tab ==  Constants.GroupFilesTab){
        
		@*@Html.Partial("_CommonSideNav")*@

    } else {
        Html.RenderAction("GetGroupHomeCards", new { slug = Model.Group.Slug });
    }
}

