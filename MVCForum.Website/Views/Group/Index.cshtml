@model MvcForum.Web.ViewModels.Group.GroupsLandingViewModel
@using MvcForum.Web.ViewModels.Shared
@{
    Layout = "~/Views/Shared/_LayoutSideBar.cshtml";
    ViewBag.Title = Html.Raw(Html.LanguageString("Group.AllGroups"));
}

@section GroupHeader {
    @Html.Partial("_GroupHeader", Model.Header)    
}

@if (Model.CurrentTab == Constants.MyGroupsTab)
{
    Html.RenderAction("MyGroupsList", "Group");
}

@if (Model.CurrentTab == Constants.DiscoverGroupsTab)
{
    @Html.Partial("_DiscoverGroups")
}