@using MvcForum.Web.Application.ExtensionMethods
@model MvcForum.Web.ViewModels.Stats.MainStatsViewModel

<div class="board-stats">
    <p>@Html.Raw(string.Format(Html.LanguageString("Stats.FooterMainStatText"), Model.MemberCount, Model.PostCount, Model.TopicCount))</p>    
</div>
<div class="latest-members">
    <h3 class="latest-members_title">@Html.LanguageString("Stats.LatestMembers")</h3>
    <ul class="latestmembersjoined">
        @foreach (var member in Model.LatestMembers)
        {
            <li>
                <a title="@Html.Raw(member.UserName)" href="@member.NiceUrl">
                    <img src="@member.MemberImage(ForumConfiguration.Instance.GravatarMinimumSize)" alt="@Html.Raw(member.UserName)" />
                </a>
            </li>
        }
    </ul>
</div>

