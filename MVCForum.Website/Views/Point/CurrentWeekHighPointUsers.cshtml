@using System.Linq;
@model MvcForum.Web.ViewModels.HighEarnersPointViewModel

@if (Html.Settings().EnablePoints && Model.HighEarners.Any(x => x.Value > 0))
{
    <div class="side-box highearners-box">
        <h3 class="side-box_title">@Html.LanguageString("Points.ThisWeeksHighEarners")</h3>

        <ul>
            @foreach (var dict in Model.HighEarners.Where(x => x.Value > 0))
            {
                <li class="clearfix">
                    <span class="earnername">
                        <img src="@dict.Key.MemberImage(ForumConfiguration.Instance.GravatarMinimumSize)" alt="@dict.Key.UserName">
                        <a href="@dict.Key.NiceUrl">@dict.Key.UserName</a>
                    </span>
                    <span class="earneramount">
                        @dict.Value
                    </span>
                </li>
            }
        </ul>

    </div>
}