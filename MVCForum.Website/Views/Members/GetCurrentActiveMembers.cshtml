
@model MvcForum.Web.ViewModels.Member.ActiveMembersViewModel

<div class="active-members">
    <h3 class="active-members_title">@Html.LanguageString("Stats.FooterActiveUsersText")</h3>
    @if (Model.ActiveMembers.Any())
    {
        <ul class="activememberslist">
            @foreach (var member in Model.ActiveMembers)
            {
                <li>
                    <a title="@Html.Raw(member.UserName)" href="@member.NiceUrl">
                        <img src="@member.MemberImage(ForumConfiguration.Instance.GravatarMinimumSize)" alt="@Html.Raw(member.UserName)" />
                    </a>
                </li>
            }
        </ul>
    }
    else
    {
        <p>@Html.Lang("Notifications.NoActiveMembers")</p>
    }
</div>